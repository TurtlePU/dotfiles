# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    interval = 5
    color_good = "#7EC8E3"
    color_degraded = "#7EC8E3"
    color_bad = "#FF0077"
}

order += "wireless _first_"
order += "ethernet _first_"
order += "disk /"
order += "memory"
order += "volume master"
order += "battery all"
order += "time"

wireless _first_ {
    format_up = " %bitrate +%quality"
    format_down = ""
}

ethernet _first_ {
    format_up = " %speed"
    format_down = ""
}

battery all {
    format = "%status %percentage %remaining"
    status_chr = ""
    status_bat = ""
    status_unk = "?"
    status_full = ""
    align = "center"
    min_width = 155
}

disk "/" {
    format = " %avail"
    align = "center"
    min_width = 125
}

memory {
    format = " %used"
    align = "center"
    min_width = 125
}

volume master {
    format = " %volume"
    format_muted = " %volume"
    color_degraded = "#FF0077"
    device = "pulse:0"
    align = "center"
    min_width = 80
}

time {
    format = "%a %e %h %H:%M:%S   "
}
